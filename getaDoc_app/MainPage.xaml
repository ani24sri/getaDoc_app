<Page
    x:Class="getaDoc_app.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:getaDoc_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <TextBlock Text="Choose your Login" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="38" />
            <Button x:Name="Pat" Click="Pat_Click" Content="Patients" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="48" Width="300" Height="500"/>
            <Button x:Name="Doc" Click="Doc_Click" Content="Doctors" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="48" Width="300" Height="500"/>
    </Grid>
</Page>
